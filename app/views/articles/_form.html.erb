<%= simple_form_for [@news_letter, @article] do |f| %>
  <div class='form-inputs'>
    <%= f.input :title %>
    <%= f.input :content, as: :text %>
    <%= f.input :featured, as: :boolean, inline_label: 'Destacado' %>
  </div>

  <div class='form-actions'>
    <%= f.button :submit, class: 'btn-primary' %>
  </div>
<% end %>
